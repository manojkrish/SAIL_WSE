package com.obj.Appium.Configuration;

import java.io.File;

import org.openqa.selenium.remote.DesiredCapabilities;

public class Appium {
	
	  File app = new File("D://Automation//app-debug-unaligned.apk");
	  DesiredCapabilities capabilities = new DesiredCapabilities();
	  capabilities.setCapability("deviceName","Samsung 5");
	  capabilities.setCapability("platformVersion", "5.0.2");
	  capabilities.setCapability("platformName", "Android");
	  capabilities.setCapability("app", app.getAbsolutePath());
	  capabilities.setCapability("appPackage", "com.pearson.ldoce6");
	  capabilities.setCapability("appActivity", ".Activity.WelcomeActivity");
	  driver = new AndroidDriver(new URL("http://127.0.0.1:4723/wd/hub"),capabilities);
	  driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
	  capabilities.setCapability("browsername","chrome");
	  capabilities.setCapability("device","android");

}
